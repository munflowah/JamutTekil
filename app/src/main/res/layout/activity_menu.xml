<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whitebone"
    tools:context=".MenuActivity"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llHeader"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:background="@color/orange"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/txtMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/alata"
            android:layout_marginStart="150dp"
            android:text="Inicio"
            android:textSize="40sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/llButtons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/llHeader"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints">

        <Button
            android:id="@+id/btnInventory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/whitebone"
            android:paddingVertical="30dp"
            android:drawableTop="@drawable/icninventory"
            android:fontFamily="@font/alata"
            android:text="Inventario"
            android:textColor="@color/black"
            android:textSize="22sp"
            tools:layout_editor_absoluteX="208dp"
            tools:layout_editor_absoluteY="247dp" />

        <Button
            android:id="@+id/btnOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/whitebone"
            android:paddingVertical="30dp"
            android:drawableTop="@drawable/icnorder"
            android:fontFamily="@font/alata"
            android:text="Pedidos"
            android:textColor="@color/black"
            android:textSize="22sp"
            tools:layout_editor_absoluteX="44dp"
            tools:layout_editor_absoluteY="247dp" />

        <Button
            android:id="@+id/btnProductos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/whitebone"
            android:paddingVertical="30dp"
            android:drawableTop="@drawable/icnneworder"
            android:fontFamily="@font/alata"
            android:text="Productos"
            android:textColor="@color/black"
            android:textSize="22sp"
            tools:layout_editor_absoluteX="44dp"
            tools:layout_editor_absoluteY="247dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
