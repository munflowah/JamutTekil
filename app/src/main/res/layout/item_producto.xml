<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imgChorizo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="5dp"
        app:srcCompat="@drawable/chorizopaquete" />

    <TextView
        android:id="@+id/tVNameProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:fontFamily="@font/alata"
        android:text="Nombre del producto"
        android:textAlignment="center"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/tVCantidadProducto"
        app:layout_constraintStart_toEndOf="@+id/imgChorizo" />

    <TextView
        android:id="@+id/tVKilos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="55dp"
        android:fontFamily="@font/alata"
        android:text="Cantidad"
        android:textAlignment="center"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/imgChorizo"
        app:layout_constraintTop_toBottomOf="@+id/tVNameProduct"
        />

    <TextView
        android:id="@+id/tVPrecio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="7dp"
        android:fontFamily="@font/alata"
        android:text="precio"
        android:textAlignment="center"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/tVKilos"
        app:layout_constraintTop_toBottomOf="@+id/tVKilos" />

    <TextView
        android:id="@+id/tVCantidadProducto"
        android:layout_width="36dp"
        android:layout_height="19dp"
        android:text="0"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@id/tVNameProduct"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"/>
    <Button
        android:id="@+id/btnAgregar"
        android:layout_width="75dp"
        android:layout_height="40dp"
        android:backgroundTint="#F28F38"
        android:padding="5dp"
        android:text="Agregar"
        android:textSize="11sp"
        app:layout_constraintStart_toStartOf="@+id/tVCantidadProducto"
        app:layout_constraintTop_toBottomOf="@id/tVCantidadProducto"/>
    <Button
        android:id="@+id/sumar"
        android:layout_width="20dp"
        android:layout_height="19dp"
        android:background="@drawable/add"
        app:layout_constraintBottom_toTopOf="@+id/btnAgregar"
        app:layout_constraintStart_toEndOf="@+id/tVCantidadProducto" />
    <Button
        android:id="@+id/restarProducto"
        android:layout_width="20dp"
        android:layout_height="19dp"
        android:layout_marginStart="3dp"
        android:background="@drawable/remove"
        app:layout_constraintBottom_toTopOf="@id/btnAgregar"
        app:layout_constraintStart_toEndOf="@+id/sumar"/>


</androidx.constraintlayout.widget.ConstraintLayout>