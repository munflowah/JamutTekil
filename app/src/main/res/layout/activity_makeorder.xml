<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whitebone"
    tools:context=".MakeOrder">

    <!--caja de titulo-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:background="@color/orange"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/txtMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/alata"
            android:text="Menu de productos"
            android:textSize="30dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </LinearLayout>

    <!--caja de carrito-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="100dp"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/imgCar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:layout_marginRight="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/icncar"
            tools:ignore="MissingConstraints" />

    </LinearLayout>


    <!--caja de productos-->

    <!-- Aqui empieza el primer bloque de venta -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="200dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgChorizo1"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginHorizontal="5dp"
                app:srcCompat="@drawable/icnchorizo"
                android:layout_gravity="center_vertical"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/txtTitleProduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/alata"
                android:layout_marginHorizontal="5dp"
                android:text="Chorizo de puerco\n 1 Kilogramo \n $60"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textSize="15dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btnAgregar"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:backgroundTint="#F28F38"
                android:padding="5dp"
                android:layout_marginHorizontal="5dp"
                android:layout_gravity="center_vertical"
                android:text="Agregar"
                android:textSize="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Aqui termina el primer bloque de venta -->

        </LinearLayout>

    </LinearLayout>


    <!-- Aqui empieza el segundo bloque de venta -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="350dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgChorizo2"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginHorizontal="5dp"
                app:srcCompat="@drawable/icnchorizo"
                android:layout_gravity="center_vertical"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/txtTitleProduct2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/alata"
                android:layout_marginHorizontal="5dp"
                android:text="Chorizo de puerco\n 500 Gramos \n $30"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textSize="15dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btnAgregar2"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:backgroundTint="#F28F38"
                android:padding="5dp"
                android:layout_marginHorizontal="5dp"
                android:layout_gravity="center_vertical"
                android:text="Agregar"
                android:textSize="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Aqui termina el segundo bloque de venta -->

        </LinearLayout>


        <!-- Aqui empieza el tercer bloque de venta -->

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="500dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgChorizo3"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginHorizontal="5dp"
                app:srcCompat="@drawable/icnchorizo"
                android:layout_gravity="center_vertical"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/txtTitleProduc3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/alata"
                android:layout_marginHorizontal="5dp"
                android:text="Chorizo de puerco\n 250 Gramos \n $15"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textSize="15dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btnAgregar3"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:backgroundTint="#F28F38"
                android:padding="5dp"
                android:layout_marginHorizontal="5dp"
                android:layout_gravity="center_vertical"
                android:text="Agregar"
                android:textSize="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Aqui termina el tercer bloque de venta -->

        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>

